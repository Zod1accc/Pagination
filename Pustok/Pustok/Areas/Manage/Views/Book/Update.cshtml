@model Book

<div class="container">
    <form method="post" asp-action="update" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input class="form-control " asp-for="Name" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Code" class="form-label">Code</label>
                <input class="form-control" asp-for="Code" placeholder="Code">
                <span asp-validation-for="Code" class="text-danger"></span>

            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="CostPrice" class="form-label">CostPrice</label>
                <input class="form-control" asp-for="CostPrice" placeholder="CostPrice">
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="SellPrice" class="form-label">SellPrice</label>
                <input class="form-control" asp-for="SellPrice" placeholder="SellPrice">
            </div>

        </div>
        <div class="row align-items-center">
            <div class="mb-3 col-md-3">
                <label asp-for="Desc" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Desc" placeholder="Description"> </textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="DiscountPrice" class="form-label">DiscountPrice</label>
                <input class="form-control" asp-for="DiscountPrice" placeholder="DiscountPrice">
            </div>

            <div>
                <select class="form-select" asp-for="AuthorId" asp-items="@(new SelectList(ViewBag.Authors,"Id","FullName"))">
                </select>
            </div>
            <div>
                <select class="form-select" asp-for="GenreId" asp-items="@(new SelectList(ViewBag.Genres,"Id","Name"))">
                </select>
            </div>

        </div>
        <div class="row row-cols-3">
            <div class="form-check col-md-3">
                <input class="form-check-input" type="checkbox" asp-for="IsAviable">
                <label class="form-check-label" asp-for="IsAviable">
                    IsAviable
                </label>
            </div>
            <div class="form-check col-md-3">
                <input class="form-check-input" type="checkbox" asp-for="IsFeatured">
                <label class="form-check-label" asp-for="IsFeatured">
                    IsFeatured
                </label>
            </div>
            <div class="form-check col-md-3">
                <input class="form-check-input" type="checkbox" asp-for="IsNew">
                <label class="form-check-label" asp-for="IsNew">
                    IsNew
                </label>
            </div>
        </div>
        <div class="row mt-3">

            <div class="mb-3 col-md-3">
                <label asp-for="PosterImageFile" class="form-label">PosterImageFile</label>
                <input class="form-control" asp-for="PosterImageFile">
                <img style="width:100;height:100px" src="~/uploads/books/@ViewBag.PosterImage?.Image" />
                <span asp-validation-for="PosterImageFile" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="HoverImageFile" class="form-label">HoverImageFile</label>
                <input class="form-control" asp-for="HoverImageFile">
                <img style="width:100;height:100px" src="~/uploads/books/@ViewBag.HoverImage?.Image" />
                <span asp-validation-for="HoverImageFile" class="text-danger"></span>
            </div>
            <div class="mb-3 col-md-3">
                
                @*@foreach (BookImage Image in ViewBag.BookImages)
                {
                    <img style="width:100;height:100px" src="~/uploads/books/@Image.Image" />
                }*@
                
            </div>
            <div class="row">
                <label asp-for="ImageFiles" class="form-label">ImageFiles</label>
                <input class="form-control" asp-for="ImageFiles">
                @foreach (BookImage Image in ViewBag.BookImages)
                {
                    <div class="mt-3 mb-3" style="position:relative;margin-right:10px">
                        <img style="width:100;height:100px;position: relative;" src="~/uploads/books/@Image.Image" />
                        <span class="text-danger deleteBtnImage" style="position: absolute;top: -13%;right: 4%;font-weight: bold;font-size: 19px;cursor:pointer">X</span>"
                        <input type="hidden" name="BookImageIds" value="@Image.Id" />
                        @*<a class="position: absolute; top:20px;r" asp-action="deleteimage" asp-controller="book" asp-route-id="@Image.Id"><img style="width:30px" src="~/manage/img/delete.png" /></a>*@
                    </div>
                }
            </div>

            <span asp-validation-for="ImageFiles" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-block btn-outline-primary">Submit</button>

    </form>
</div>
