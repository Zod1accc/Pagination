@model PaginatedList<Brand>
@{
    int count = (Model.Page - 1) * 3;
}

<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Brands</h1>
    <a class="btn btn-success" asp-action="create" asp-controller="brand">Create Feature</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fweature in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@fweature.Image</td>
                <td>
                    <a class="btn btn-info me-4 " asp-action="update" asp-controller="brand" asp-route-id="@fweature.Id">Update</a>
                    <a class="btn btn-danger item-delete" asp-action="delete" asp-controller="brand" asp-route-id="@fweature.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div class="d-flex justify-content-center fixed" >
    <nav aria-label="...">
        <ul class="pagination">
            @if (Model.HasPrevious)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="brand" asp-route-page="@(Model.Page-1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")"><a class="page-link" asp-action="index" asp-controller="brand" asp-route-page="@i">@i</a></li>

            }
            @if (Model.HasNext)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-controller="brand" asp-route-page="@(Model.Page+1)">Next</a>
                </li>
            }

        </ul>
    </nav>
</div>


