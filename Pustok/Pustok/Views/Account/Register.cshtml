@model RegisterViewModel
	<div class="site-wrapper" id="top">
		
		<section class="breadcrumb-section">
			<h2 class="sr-only">Site Breadcrumb</h2>
			<div class="container">
				<div class="breadcrumb-contents">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="index.html">Home</a></li>
							<li class="breadcrumb-item active">Login</li>
						</ol>
					</nav>
				</div>
			</div>
		</section>
		<!--=============================================
		=            Login Register page content         =
		=============================================-->
		<main class="page-section inner-page-sec-padding-bottom">
			<div class="container">
				<div class="row">
					<div class="col-sm-12 col-md-12 col-xs-12 col-lg-12 mb--30 mb-lg--0">
						<!-- Login Form s-->
						<form method="post" asp-action="register">
							<div class="login-form">
								<h4 class="login-title">New Customer</h4>
								<p><span class="font-weight-bold">I am a new customer</span></p>
								<div class="row">
									<div class="col-md-4 col-12 mb--15">
										<label asp-for="Fullname">Full Name</label>
										<input asp-for="Fullname" class="mb-0 form-control" type="text" id="name"
											   placeholder="Enter your full name">
										<span asp-validation-for="Fullname"></span>
									</div>
									<div class="col-md-4 mb--20">
										<label asp-for="Username">Username</label>
										<input asp-for="Username" class="mb-0 form-control"  placeholder="Enter Your Username Here..">
									<span asp-validation-for="Username"></span>

									</div>
								<div class="col-md-4 mb--20">
										<label asp-for="Email">Email</label>
										<input asp-for="Email" class="mb-0 form-control" type="email" id="email" placeholder="Enter Your Email Address Here..">
									<span asp-validation-for="Email"></span>

									</div>
									<div class="col-lg-6 mb--20">
										<label asp-for="Password">Password</label>
										<input asp-for="Password" class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
									<span asp-validation-for="Password"></span>

									</div>
									<div class="col-lg-6 mb--20">
									<label asp-for="ConfirmPassword">ConfirmPassword</label>
										<input asp-for="ConfirmPassword" class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
									<span asp-validation-for="ConfirmPassword"></span>

									</div>
									<div asp-validation-summary="ModelOnly" ></div>
									<div class="col-md-12">
										<button type="submit" class="btn btn-outlined">Register</button>
									</div>
								</div>
							</div>
						</form>
					</div>
					
				</div>
			</div>
		</main>
	</div>
	

